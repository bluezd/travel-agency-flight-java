apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: ta-flight-apm
  labels:
    run: ta-flight-apm
spec:
  replicas: 1
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
    type: RollingUpdate
  template:
    metadata:
      labels:
        run: ta-flight-apm
    spec:
      hostname: spring-boot-apm
      containers:
      - image: $OKE_REPOSITORY_APM:$WERCKER_GIT_BRANCH-$WERCKER_GIT_COMMIT
        imagePullPolicy: Always
        name: ta-flight-apm
        ports:
        - containerPort: 8001
          protocol: TCP
        env:
        - name: "DB_USER"
          valueFrom:
            secretKeyRef:
              name: db-creds
              key: db.user
        - name: "DB_PASSWORD"
          valueFrom:
            secretKeyRef:
              name: db-creds
              key: db.password
      restartPolicy: Always
      imagePullSecrets:
        - name: ocirsecret
---
apiVersion: v1
kind: Service
metadata:
  name: ta-flight-apm-svc
spec:
    type: ClusterIP
    ports:
    - name: http
      port: 9005
      targetPort: 8001
      protocol: TCP
    selector:
      run: ta-flight-apm
